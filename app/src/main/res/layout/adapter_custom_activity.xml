<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16sp"
    android:background="@drawable/customizar"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/idLineart01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/idImageAdaCustom"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:contentDescription="@string/ignore" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTextAdpCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_exemplo" />
    </LinearLayout>

</LinearLayout>